<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <package name="main" namespace="/main" extends="my-default">

        <!--书籍展示-->
        <action name="showAction" class="main.action.main.ShowAction">
            <result name="show">/WEB-INF/jsp/main/showBook.jsp</result>
        </action>

        <!-- 书本详细信息 -->
        <action name="book_view"  class="main.action.main.BookViewAction">
            <result name="bookview">/WEB-INF/jsp/main/product.jsp</result>
        </action>
    </package>
</struts>